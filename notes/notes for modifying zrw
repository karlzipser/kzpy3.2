zed-wrapper-nodelet.cpp, 960:
    void ZEDWrapperNodelet::publishImage(sl::Mat img,
                                         image_transport::Publisher& pubImg,
                                         string imgFrameId, ros::Time t) {
        pubImg.publish(sl_tools::imageToROSmsg(img, imgFrameId, t));
    }